<h1> 
<i class="fas fa-fish"></i>
Listar los tipos de restaurantes </h1>

<%= link_to @titulo_link, nuevo_tipo_comida_path %>

<table>
    <tr>
        <th>id</th>
        <th>tipo</th>
        <th>acciones</th>
    </tr>

<% @todos_los_tipos.each do |tipo_comida| %>
    <tr>
        <td> <%= tipo_comida.id %> </td>
        <td> 
            <i class="fas fa-fish"></i>
            <%= link_to tipo_comida_path(tipo_comida) do %> 
                <%= tipo_comida.tipo %>
            <% end %>
        </td>
        <td>
            <!--                                              tipo_comida-->
            <%= link_to tipo_comida_path(tipo_comida), method: :delete, data: { confirm: '¿Está seguro que quiere eliminar el registro?'} do %>
                <i class="fas fa-eraser"></i>
                Borrar
            <% end %>
            <%= link_to editar_tipo_comida_path(tipo_comida) do %>
                <i class="fas fa-edit"></i>
                Editar
            <% end %>   
        </td>
    </tr>
<% end %>

</table>